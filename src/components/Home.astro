<main id="home">
    <div id="content">
        <h1>
            From idea
            <img src="/bulb.svg" alt="" id="bulb">
        </h1>
        <h2>to the</h2>
        <h3>
            web
            <img src="/pointer.svg" alt="" id="pointer">
        </h3>
        <h4>We're here every step of the way</h4>
    </div>
    <a href="">Get in touch!</a>
    <img src="/desktop-morgan.png" alt="">
    <img src="/desktop-sterling.png" alt="">
    <img src="/desktop-threedles.png" alt="">
    <img src="/desktop-landscape.png" alt="">
    <img src="/desktop-dog.png" alt="">
</main>

<style>
    #home {
        font-family: "Roboto", Arial, Helvetica, sans-serif;
        margin-top: 5rem;
    }
    #content {
        position: relative;
    }
    h1 {
        background-color: black;
        color: white;
        display: inline-block;
        margin-left: 1rem;
        padding-top: 1rem;
        padding-right: 1rem;
        padding-left: 10%;
        padding-bottom: 2.5rem;
        font-size: 4rem;
        text-align: right;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 2px;
        position: relative;
        z-index: 1;
        transition: 1500ms;
        opacity: 0;
        transform: translateX(-10rem);
    }
    h2 {
        border: 2px solid black;
        margin-left: 40%;
        margin-right: 2rem;
        margin-top: -1.5rem;
        padding-left: 1rem;
        padding-top: 1rem;
        padding-bottom: 2rem;
        font-size: 2rem;
        font-weight: 300;
        text-transform: uppercase;
        position: relative;
        z-index: 2;
        background-color: white;
        transition: 1000ms;
        opacity: 0;
        transform: translateX(5rem);
    }
    h3 {
        background-color: black;
        color: white;
        padding: 1rem;
        margin-left: 25%;
        margin-top: -1rem;
        font-size: 3.5rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        display: inline-block;
        position: relative;
        z-index: 3;
        transition: 1500ms;
        opacity: 0;
        transform: translateX(-3rem);
    }
    .show {
        opacity: 1;
        transform: translate(0);
    }
    h4 {
        text-align: center;
        font-size: 2rem;
        font-weight: 200;
        margin-top: 3rem;
        padding: 0 0.5rem;
    }
    a {
        display: block;
        text-align: center;
        width: 10rem;
        margin: 2rem auto;
        padding: 0.75rem 0;
        background: linear-gradient(89.7deg, rgb(0, 32, 95) 2.8%, rgb(132, 53, 142) 97.8%);
        color: white;
        text-decoration: none;
        letter-spacing: 1px;
        border-radius: 0.25rem;
        transition: 250ms;
    }
    a:hover {
        transform: translateY(-3px);
    }
    #bulb {
        position: absolute;
        right: 0;
        bottom: 1.5rem;
        width: 2rem;
        transition: 500ms;
    }
    h1:hover #bulb {
        transform: translateX(1.5rem) rotate(55deg) scale(2.25);
        transform-origin: 100% 100%;
    }
    #pointer {
        position: absolute;
        right: 0;
        bottom: 0.25rem;
        transition: 500ms;
    }
    h3:hover #pointer {
        transform: translateX(3rem) translateY(-1rem) scale(2.5);
    }
    @media (min-width: 35rem) {
        #content {
            width: 35rem;
            margin: 0 auto;
        }
    }
    @media (max-width: 30rem) {
        h1 {
            font-size: 3rem;
            margin-left: 0;
        }
        h1:hover #bulb {
            transform: translateX(1.25rem) rotate(55deg) scale(2);
        }
        h2 {
            font-size: 1.5rem;
        }
        h3 {
            font-size: 2.75rem;
        }
        h4 {
            font-size: 1.75rem;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const h1 = document.querySelector("h1");
        const h2 = document.querySelector("h2");
        const h3 = document.querySelector("h3");
        h1.classList.add("show");
        h2.classList.add("show");
        h3.classList.add("show");
    })
</script>